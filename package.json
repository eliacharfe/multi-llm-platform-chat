{
  "name": "multi-llm-platform",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm --prefix apps/web run dev",
    "dev:api": "cd apps/api && uvicorn main:app --reload --port 8000",
    "dev": "concurrently -n web,api -c blue,green \"npm run dev:web\" \"npm run dev:api\""
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}